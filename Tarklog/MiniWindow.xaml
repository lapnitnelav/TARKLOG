<Window x:Class="Tarklog.MiniWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tarklog Mini"
        Height="120"
        Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="#CC1976D2"
            BorderBrush="#2196F3"
            BorderThickness="2"
            CornerRadius="8"
            Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with buttons -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Latest Raid"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="⟲"
                        Width="24"
                        Height="24"
                        Margin="0,0,5,0"
                        Background="#1565C0"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Bold"
                        ToolTip="Refresh"
                        Click="RefreshButton_Click"/>

                <Button Grid.Column="2"
                        Content="▢"
                        Width="24"
                        Height="24"
                        Background="#1565C0"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="12"
                        FontWeight="Bold"
                        ToolTip="Restore Full Window"
                        Click="RestoreButton_Click"/>
            </Grid>

            <!-- Raid Info -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Name="MapTextBlock"
                           Text="No raid data"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           TextAlignment="Center"
                           Margin="0,0,0,4"/>

                <TextBlock Name="DetailsTextBlock"
                           Text=""
                           FontSize="11"
                           Foreground="#E3F2FD"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,2"/>

                <TextBlock Name="TimeTextBlock"
                           Text=""
                           FontSize="10"
                           Foreground="#BBDEFB"
                           TextAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
